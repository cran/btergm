citHeader("To cite package 'btergm' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
  title = "btergm: Temporal Exponential Random Graph Models by Bootstrapped Pseudolikelihood",
  author = personList(as.person("Philip Leifeld"), 
                      as.person("Skyler J. Cranmer"), 
                      as.person("Bruce A. Desmarais")),
  year = year,
  note = vers,
  textVersion = paste("Leifeld, Philip, Skyler J. Cranmer and Bruce A. ",
      "Desmarais (", year, "). btergm. Temporal Exponential Random ", 
      " Graph Models by Bootstrapped Pseudolikelihood. ", vers, ".", sep = ""),
  url = "https://CRAN.R-project.org/package=btergm"
)
